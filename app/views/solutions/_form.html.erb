<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 form-container p-5">
      <h1 class="mt-5 mb-3">Your solution.</h1>
      <%= simple_form_for [@problem, @solution] do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn-primary" %>
        <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
      </div>

      <div class="form-actions">
        <%= link_to "Back to problem", problem_path(@problem) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
