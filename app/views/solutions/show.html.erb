<div class="container-show-solution d-flex justify-content-center">
  <div class="container col-10">
    <div class="row d-flex justify-content-center pl-2 pr-2">
      <div class="col-sm-7 d-flex flex-column justify-content-start pl-5 h-80" style="height: 380px;">
        <div class="main-title mt-4 mb-3">
          <h2><%= @solution.title %></h2>
        </div>
        <div class="main-title">
          <p><%= @solution.description %></p>
        </div>
      </div>

      <div class="col-sm-5">
        <div class="card-profile-entrepreneur text-center mr-5 p-5 mt-4" >
          <div class="avatar-large"></div>
          <h3><%= @solution.user.name %></h3>
          <p>User description</p>
        </div>
      </div>
      <div class="col-sm-12 mt-5">
        <div class="card-number-votes">
          <h4> Number of votes : <%= @solution.solution_votes_count %></h4>
        </div>
      </div>

      <div class="col-sm-12">
        <div class="stipe-donation-form">
          stripe donation form
        </div>
      </div>

      <div class="col-sm-12">
        <div class="btn-underline-yellow-black mt-3 text-center">
          <%= link_to "Back to problem",problem_path(@solution.problem) %>
        </div>
        <div class="btn-underline-yellow-black mt-2 mb-3 text-center">
          <%= link_to "Back to problems list", problems_path %>
        </div>
      </div>
    </div>
  </div>
</div>



