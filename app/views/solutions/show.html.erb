<div class="container-show-solution d-flex justify-content-center">
  <div class="container col-10">
    <div class="row">

      <div class="col-sm-7">
        <div class="main-title mt-4 ml-5 mb-3">
          <h2><%= @solution.title %></h2>
        </div>
        <div class="main-title ml-5">
          <p><%= @solution.description %></p>
        </div>
      </div>

      <div class="col-sm-5">
        <div class="card-profile-entrepreneur text-center mt-5 ml-5 p-3 pl-4 position-absolute" >
          <div class="avatar-large text-center position-relative p-3">
            <% if !current_user.photo.nil? %>
              <%= cl_image_tag current_user.photo, height: 200, width: 200, crop: :thumb, gravity: :face, class:"avatar-large" %>
            <% end %>
          </div>
          <h3><%= @solution.user.name %></h3>
          <p><%= @solution.description %></p>
        </div>
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
      </div>

      <div class="col-sm-12 mt-5">
        <div class="card-number-votes">
          <h4> Number of votes : <%= @solution.solution_votes_count %></h4>
        </div>
      </div>

      <div class="col-sm-12">
        <div class="stipe-donation-form">
          stripe donation form
        </div>
      </div>

      <div class="col-sm-12 ml-5">
        <div class="btn-underline-yellow-black mt-5 text-center">
          <%= link_to "Back to problem",problem_path(@solution.problem) %>
        </div>
        <div class="btn-underline-yellow-black mt-2 mb-5 text-center">
          <%= link_to "Back to problems list", problems_path %>
        </div>
      </div>
    </div>
  </div>
</div>



