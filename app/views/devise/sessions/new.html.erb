<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 form-container p-5">
      <h1 class="mt-5 mb-3">hello .</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" , class:"rounded-border" }%>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class:"rounded-border" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Contribute', class: 'btn btn-warning rounded-border text-light mt-2 mb-3' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <h5 class="roboto">OR</h5>
      <div class="btn-group p-3 mb-3">
        <a href="" class="rounded-border btn btn-outline-secondary ">Google</a>
        <a href="" class="rounded-border btn btn-outline-secondary ">Facebook</a>
    </div>
  </div>
</div>
