<div class="container-filters pt-2 pb-2">
  <div class="container d-flex justify-content-center align-items-center">
    <%= simple_form_for :filters, url: problems_path, method: :get do |f| %>
    <%= f.input :category, label: false, collection: Problem::CATEGORY %>
    <%= f.button :submit, class:"btn-filters" %>
    <% end %>
    <div class="sort_icon ml-5">
      <%= link_to problems_path(sort: "votes", direction: 'asc') do %>
      <i class="fas fa-sort-up"></i>
      <% end %>
    </div>
    <div class="sort_icon ml-2">
      <%= link_to problems_path(sort: "votes", direction: 'desc') do %>
      <i class="fas fa-sort-down"></i>
      <% end %>
    </div>
    <div class="sort_icon ml-2"><p>votes</p></div>
  </div>
</div>
