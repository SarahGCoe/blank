<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-6 form-container-solution p-5">
      <h1 class="mt-3 mb-3">Your Issue.</h1>
      <%= simple_form_for @problem do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs mt-2 pr-5 pl-5">
        <%= f.input :title, label:"Give a title to your issue",
        input_html: { class:"h3 rounded-border" } %>
        <%= f.input :description,label:"Give us more details about your issue",
        input_html: { class:"h3 rounded-border" } %>
        <%= f.association :category, input_html: { class:"h3 rounded-border" } %>
        <div class="d-flex flex-column align-items-center">
        <%= f.button :submit, "Create Problem!", class:"h2 btn-outline-warning rounded-border btn-lg mt-2" %>
        <%= link_to "Cancel", problems_path, class:"btn btn-outline-secondary rounded-border mt-2 mb-3" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
