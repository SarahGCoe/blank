<%= render 'search' %>
<%= render 'filters' %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @problems.each do |problem| %>
      <div class="col-md-4">
        <div class="pb-card w-100 bg-light">
          <div class="d-flex justify-content-between">
            <%= cl_image_tag(problem.category.img_url, width: 80, height: 80, crop: :fill, class:"pb-card-category position-relative")%>
            <button type="button" class="btn btn-lg btn-danger notification position-absolute" data-toggle="popover" data-placement="top" title="" data-content="Number of solutions"><%= problem.solutions.count %></button>
            <div class="pb-card-user">
              <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/49/Koala_climbing_tree.jpg/290px-Koala_climbing_tree.jpg" alt="user-avatar" class="rounded-circle">
              <p><%= problem.user.name %></p>
              <p><%= problem.created_at.strftime('%d %b %Y')%></p>
            </div>
          </div>
          <h4><%= problem.category.name.upcase %></h4>
          <h3><%= link_to problem.title, problem_path(problem) %></h3>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Neque, nesciunt minima temporibus blanditiis nulla porro aliquam voluptate, atque deserunt nostrum at. Mollitia non laudantium vel cupiditate nam, eveniet ab cum.
          </p>
          <div class="card-solution-description">
            <%= link_to 'More details...', problem_path(problem) %>
          </div>
          <%= render 'vote', problem: problem %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
